<div class="w-full min-h-screen px-4 py-8">

  <!-- Title Bar -->
  <div class="flex items-center justify-between mb-6 p-4 backdrop-blur-sm  ">
    <div>
      <h1 class="text-2xl font-bold text-blue-950 drop-shadow-sm">My Academy Quest</h1>
      <p class="text-sm text-violet-400">My academy Quest</p>
    </div>
    <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="size-6 text-blue-950">
      <path fill-rule="evenodd" d="..." clip-rule="evenodd" />
    </svg>
  </div>

  <!-- Profile Card -->
  <div class="flex flex-col items-center mb-12 p-8">
    <div class="size-[10rem] mb-4 overflow-hidden rounded-full shadow-md ring-2 ring-indigo-100">
      <%= image_tag "Me.jpg", alt: "profile image", class: "w-full h-full object-cover" %>
    </div>
    <h2 class="text-2xl font-semibold text-blue-950 drop-shadow-sm">Thitporn Thiamjan</h2>
    <p class="text-md text-gray-600 italic">Go to Brag</p>
  </div>

  <!-- Category Buttons -->
  <div class="flex overflow-x-auto whitespace-nowrap gap-4 mb-12 pb-2">
    <% @categories.each do |category| %>
      <%= link_to by_category_tasks_path(category: category),
                  class: "flex items-center gap-3 bg-white shadow-md hover:shadow-2xl ring-1 ring-indigo-100 rounded-full px-3 py-2 transition hover:scale-105" do %>
        <div class="size-6 rounded-full <%= category_color_class(category) %> shadow-sm "></div>
        <div class="text-md font-medium text-gray-700 truncate">
          <%= category.presence || "ไม่ระบุหมวดหมู่" %>
        </div>
      <% end %>
    <% end %>
  </div>

  <!-- Header: Tasks by Category + New Task -->
  <div class="flex justify-between items-center mb-6">
    <h2 class="text-2xl font-bold text-blue-950">Tasks by Category</h2>
    <%= link_to 'New Task', new_task_path, class: "btn btn-primary shadow-lg hover:shadow-xl transition" %>
  </div>

  <!-- Grouped Tasks -->
  <% @tasks.group_by(&:category).each do |category, tasks| %>
    <div class="bg-white p-6 rounded-2xl shadow-xl  mb-10 transition hover:shadow-2xl">
      <h3 class="text-xl font-bold mb-4 text-blue-900 tracking-wide">
        <%= category.presence || "ไม่ระบุหมวดหมู่" %>
      </h3>
      <ul class="space-y-4">
        <% tasks.each do |task| %>
          <%= link_to task_path(task), class: "block" do %>
            <li class="flex justify-between items-center bg-[#F5F4FB] px-4 py-3 rounded-xl hover:bg-violet-100 transition <%= 'line-through text-gray-400' if task.done %>">
              <div class="flex items-center gap-4">
                <div onclick="event.stopPropagation()">
                  <%= form_with model: task, url: toggle_done_task_path(task), method: :patch, local: true do |f| %>
                    <%= f.check_box :done, { checked: task.done, onchange: 'this.form.submit()', class: "scale-125 accent-blue-950" }, true, false %>
                  <% end %>
                </div>
                <div>
                  <div class="font-medium text-blue-800 hover:underline"><%= task.title %>
                  <% if task.deadline %>
                    <span class="text-sm text-gray-600 ml-2">📅 <%= task.deadline.strftime("%d/%m/%Y") %></span>
                  <% end %>
                  </div>
                </div>
              </div>
              <div class="flex items-center gap-4">
                <%= link_to edit_task_path(@task), class: "tooltip tooltip-bottom" , data: { tip: "แก้ไขงานนี้" } do %>
                  <button class="btn btn-sm border-none px-3">
                    <!-- ไอคอนดินสอ -->
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
                      <path d="M21.731 2.269a2.625 2.625 0 0 0-3.712 0l-1.157 1.157 3.712 3.712 1.157-1.157a2.625 2.625 0 0 0 0-3.712ZM19.513 8.199l-3.712-3.712-8.4 8.4a5.25 5.25 0 0 0-1.32 2.214l-.8 2.685a.75.75 0 0 0 .933.933l2.685-.8a5.25 5.25 0 0 0 2.214-1.32l8.4-8.4Z" />
                      <path d="M5.25 5.25a3 3 0 0 0-3 3v10.5a3 3 0 0 0 3 3h10.5a3 3 0 0 0 3-3V13.5a.75.75 0 0 0-1.5 0v5.25a1.5 1.5 0 0 1-1.5 1.5H5.25a1.5 1.5 0 0 1-1.5-1.5V8.25a1.5 1.5 0 0 1 1.5-1.5h5.25a.75.75 0 0 0 0-1.5H5.25Z" />
                    </svg>
                  </button>
                <% end %>
                <%= button_to @task, method: :delete, data: { confirm: "แน่ใจหรือไม่ว่าจะลบงานนี้?" }, class: "tooltip tooltip-bottom", data: { tip: "ลบงานนี้" } do %>
                  <button class="btn btn-sm border-none px-3">
                    <!-- ไอคอนถังขยะ -->
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5">
                      <path fill-rule="evenodd" d="M16.5 4.478v.227a48.816 48.816 0 0 1 3.878.512.75.75 0 1 1-.256 1.478l-.209-.035-1.005 13.07a3 3 0 0 1-2.991 2.77H8.084a3 3 0 0 1-2.991-2.77L4.087 6.66l-.209.035a.75.75 0 0 1-.256-1.478A48.567 48.567 0 0 1 7.5 4.705v-.227c0-1.564 1.213-2.9 2.816-2.951a52.662 52.662 0 0 1 3.369 0c1.603.051 2.815 1.387 2.815 2.951Zm-6.136-1.452a51.196 51.196 0 0 1 3.273 0C14.39 3.05 15 3.684 15 4.478v.113a49.488 49.488 0 0 0-6 0v-.113c0-.794.609-1.428 1.364-1.452Zm-.355 5.945a.75.75 0 1 0-1.5.058l.347 9a.75.75 0 1 0 1.499-.058l-.346-9Zm5.48.058a.75.75 0 1 0-1.498-.058l-.347 9a.75.75 0 0 0 1.5.058l.345-9Z" clip-rule="evenodd" />
                    </svg>
                  </button>
                <% end %>
              </div>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  <% end %>

</div>
