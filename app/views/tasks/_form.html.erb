<%= form_with(model: task, local: true, class: "space-y-6 p-6 rounded-xl max-w-2xl mx-auto") do |form| %>
  <% if task.errors.any? %>
    <div class="alert alert-error shadow-lg">
      <div>
        <span><%= pluralize(task.errors.count, "ข้อผิดพลาด") %> ที่ต้องแก้ไข:</span>
        <ul class="list-disc list-inside">
          <% task.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <!-- หัวข้องาน -->
  <div>
    <%= form.label :title, "หัวข้องาน", class: "label font-semibold" %>
    <%= form.text_field :title, class: "input input-bordered w-full bg-[#F5F4FB] border-none" %>
  </div>

  <!-- รายละเอียดงาน -->
  <div>
    <%= form.label :description, "รายละเอียด", class: "label font-semibold" %>
    <%= form.text_area :description, rows: 3, class: "textarea textarea-bordered w-full bg-[#F5F4FB] border-none" %>
  </div>

  <!-- หมวดหมู่ -->
  <div>
    <label class="label font-semibold">หมวดหมู่งาน</label>
    <div class="flex flex-col md:flex-row gap-4">
      <!-- dropdown -->
      <select id="category-select"
              class="select select-bordered w-full bg-[#F5F4FB] flex-1 border-none"
              onchange="document.getElementById('category-input').value = this.value">
        <option value="">เลือกจากรายการที่มี</option>
        <% @categories.each do |category| %>
          <option value="<%= category %>"><%= category %></option>
        <% end %>
      </select>

      <!-- input -->
      <%= text_field_tag "task[category]", task.category,
            id: "category-input",
            placeholder: "หรือกรอกหมวดหมู่ใหม่",
            class: "input input-bordered w-full bg-[#F5F4FB] flex-1 border-none" %>
    </div>
  </div>

  <!-- วันที่ -->
  <div class="flex flex-col md:flex-row gap-4">
    <div class="flex-1">
      <%= form.label :assigned_at, "วันที่ได้รับงาน", class: "label font-semibold" %>
      <%= form.datetime_local_field :assigned_at, class: "input input-bordered w-full bg-[#F5F4FB] border-none" %>
    </div>
    <div class="flex-1">
      <%= form.label :deadline, "วันกำหนดส่ง (ถ้ามี)", class: "label font-semibold" %>
      <%= form.datetime_local_field :deadline, class: "input input-bordered w-full bg-[#F5F4FB] border-none" %>
    </div>
  </div>

  <!-- เสร็จแล้ว -->
  <div class="flex items-center gap-2">
    <%= form.check_box :done, class: "checkbox checkbox-primary" %>
    <%= form.label :done, "ทำเสร็จแล้ว", class: "font-medium" %>
  </div>

  <!-- ปุ่ม -->
  <div class="text-center">
    <%= form.submit (task.persisted? ? "อัปเดตงาน" : "บันทึกงาน"), class: "btn btn-primary btn-wide shadow-md" %>
  </div>
<% end %>
